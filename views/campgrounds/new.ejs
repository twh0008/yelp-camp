<% include ../partials/header %>




<div class="row">
    <div class="col-lg-12">
         <h1 id="formTitle"> Submit a Campsite!</h1>
        <div id="formDiv">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input type="text" placeholder="campground" name="name" class="form-control"></input>
                </div>
                <div class="form-group">
                    <input type="text" placeholder="image" name="image" class="form-control"></input>
                </div>
                <div class="form-group">
                    <input type="number" placeholder="price" name="price" class="form-control" min="0.01" step=".01"></input>
                </div>
                <div class="form-group">
                    <input type="text" placeholder="description" name="description" class="form-control"></input>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="Chewacla, AL">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>

            </form>
             <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>





