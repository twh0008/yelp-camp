<% include ../partials/header %>




<div class="row">
    <div class="col-lg-12">
         <h1 id="formTitle"> Edit <%= campground.name %></h1>
        <div id="formDiv">
            <form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" placeholder="Campground" name="campground[name]" class="form-control" value="<%=campground.name %>"></input>
                </div>
                <div class="form-group">
                    <input type="text" placeholder="Image" name="campground[image]" class="form-control" value="<%=campground.image %>"></input>
                </div>
                <div class="form-group">

                    <input type="number" placeholder="Campground" name="campground[price]" class="form-control" value="<%=campground.price %>" min="0.01" step=".01"></input>
                </div>
                <div class="form-group">

                    <input type="text" placeholder="Description" name="campground[description]" class="form-control" value="<%=campground.description %>"></input>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
             <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>





<% include ../partials/footer %>

